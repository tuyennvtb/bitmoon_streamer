{
  "name": "api",
  "version": "0.0.0",
  "private": true,
  "dependencies": {
    "abi-decoder": "^2.4.0",
    "big.js": "^5.0.3",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "compression": "^1.7.1",
    "connect-redis": "^3.3.2",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "dataloader": "^1.3.0",
    "ethereum-input-data-decoder": "^0.3.2",
    "ethereumjs-tx": "^1.3.7",
    "eventsource": "^1.0.7",
    "express": "^4.16.2",
    "express-session": "^1.15.6",
    "faker": "^4.1.0",
    "handlebars": "^4.0.11",
    "handlebars-layouts": "^3.1.4",
    "jest": "^21.2.1",
    "juice": "^4.2.2",
    "kue": "^0.11.6",
    "node-fetch": "^2.1.1",
    "nodemailer": "^4.4.0",
    "pg": "^7.4.0",
    "pretty-error": "^2.1.1",
    "pusher-js": "^4.2.2",
    "reconnecting-websocket": "^3.2.2",
    "redis": "^2.8.0",
    "socket.io-client": "^2.1.1",
    "source-map-support": "^0.5.0",
    "stellar-sdk": "^0.11.0",
    "validator": "^9.1.2",
    "web3": "1.2.4",
    "web3-eth": "^1.3.3",
    "ws": "^4.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-jest": "^21.2.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "chokidar": "^1.7.0",
    "del": "3.0.0",
    "eslint": "^4.12.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flowtype": "^2.39.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-prettier": "^2.3.1",
    "flow-bin": "^0.60.0",
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "nodemon": "^2.0.7",
    "prettier": "^1.8.2"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/tools/jest.setup.js"
  },
  "lint-staged": {
    "*.js": [
      "eslint --no-ignore --fix",
      "git add --force"
    ],
    "*.json": [
      "prettier --write",
      "git add --force"
    ]
  },
  "scripts": {
    "lint": "eslint --ignore-path .gitignore --ignore-pattern \"!**/.*\" .",
    "fix": "eslint --ignore-path .gitignore --ignore-pattern \"!**/.*\" --fix .",
    "check": "flow check",
    "test": "jest",
    "build": "node tools/build.js",
    "build-watch": "node tools/build.js --watch",
    "db-version": "node tools/db.js version",
    "db-migrate": "node tools/db.js migrate",
    "db-rollback": "node tools/db.js rollback",
    "db-migration": "node tools/db.js migration",
    "db-seed": "node tools/db.js seed",
    "docker": "docker-compose run --rm api yarn",
    "docker-install": "docker-compose run --rm --no-deps api yarn install",
    "docker-upgrade": "docker-compose run --rm --no-deps api yarn upgrade",
    "docker-test": "docker-compose run api yarn test",
    "docker-test-watch": "docker-compose run api yarn test-watch",
    "docker-db-version": "docker-compose exec api yarn db-version",
    "docker-db-migrate": "docker-compose exec api yarn db-migrate",
    "docker-db-rollback": "docker-compose exec api yarn db-rollback",
    "docker-db-migration": "docker-compose exec api yarn db-migration",
    "docker-db-seed": "docker-compose exec api yarn db-seed",
    "deploy": "nodemon tools/publish.js",
    "start-test": "NODE_ENV=production && nodemon --watch server --ignore '*.test.ts' --delay 3 tools/run.js",
    "start": "node tools/run.js",
    "start-staging": "set NODE_ENV=staging && node tools/run.js",
    "start-production": "set NODE_ENV=production && node tools/run.js"
  }
}
